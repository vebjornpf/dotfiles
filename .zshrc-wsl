# ========== ~/.zshrc ==========
# Safety: don't clobber files with ">"
set -o noclobber
export PATH=/home/linuxbrew/.linuxbrew/bin:$HOME/bin:$HOME/.local/bin:/usr/local/bin:$PATH
export EDITOR=vim
export VISUAL=vim
# Path to your Oh My Zsh installation.
export ZSH="$HOME/.oh-my-zsh"
# Set name of the theme to load --- if set to "random", it will
# load a random theme each time Oh My Zsh is loaded, in which case,
# to know which specific one was loaded, run: echo $RANDOM_THEME
# See https://github.com/ohmyzsh/ohmyzsh/wiki/Themes
ZSH_THEME="robbyrussell"
ZSH_THEME_RANDOM_CANDIDATES=(agnoster bira candy robbyrussell)
plugins=(git gradle z zsh-autosuggestions zsh-syntax-highlighting)
# Open IntelliJ from terminal
if command -v intellij-idea-ultimate >/dev/null 2>&1; then
  # Use the snap shim
  idea() {
    local target="${1:-.}"
    nohup intellij-idea-ultimate "$target" >/dev/null 2>&1 &
  }
elif [ -x /snap/intellij-idea-ultimate/current/bin/idea ]; then
  # Fallback to the snap's idea script
  idea() {
    local target="${1:-.}"
    nohup /snap/intellij-idea-ultimate/current/bin/idea "$target" >/dev/null 2>&1 &
  }
fi
alias second-brain='cd /mnt/c/Users/vebjorf/Documents/second-brain'
export GCP_OAUTH_TOKEN="$(gcloud auth print-access-token 2>/dev/null)"
#THIS MUST BE AT THE END OF THE FILE FOR SDKMAN TO WORK!!!
export SDKMAN_DIR="$HOME/.sdkman"
[[ -s "$HOME/.sdkman/bin/sdkman-init.sh" ]] && source "$HOME/.sdkman/bin/sdkman-init.sh"

source $ZSH/oh-my-zsh.sh
